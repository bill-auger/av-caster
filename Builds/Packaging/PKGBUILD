# Maintainer: bill-auger <bill-auger@programmer.net>


pkgname=av-caster
pkgver=0.16.005pre6rc3
pkgrel=1
pkgdesc="A light-weight native gStreamer GUI for screencast, webcam, and audio recording and streaming"
arch=(armv7h i686 x86_64)
url=https://github.com/bill-auger/av-caster
license=(GPL3)

depends=(gst-plugins-bad gst-plugins-base gst-plugins-ugly juce libircclient libxrandr)
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/bill-auger/av-caster/archive/v${pkgver}.tar.gz)

sha256sums=('78be8e675a97725ddd82f67d539129d0ed6a0d27281693bc0960231714e134fb')


build()
{
  cd ${pkgname}-${pkgver}/Builds/Makefile

  make CONFIG=Release
}

package()
{
  cd ${pkgname}-${pkgver}/Builds/Makefile

  make DESTDIR="${pkgdir}" install
}
